  <div class="center">
    <h4>Turnos</h4>
  </div>
  <br>
  <div class="container-table" >
      <table>
        <thead>
          <th scope="col">Numero</th>
          <th scope="col">Paciente</th>
          <th scope="col">Propietario</th>
          <th scope="col">Fecha de Cita</th>
          <th scope="col">Creado</th>
          <th scope="col">Actualizado</th>
          <th scope="col">Opciones</th>
        </thead>
        <tbody>
          <% turno.forEach(function(turno) { %>
            <tr>
              <td>
                <%= turno.numero%>
              </td>
              <td>
                <%= turno.paciente%>
              </td>   
              <td>
                <%= turno.propietario%>
              </td>
              <td>
                <%= turno.fechaturno%>
              </td>
             
              <td>
                <%= turno.created_at.toLocaleDateString() %>
                  <%= turno.created_at.toLocaleTimeString() %>
              </td>
              <td>
                <%= turno.updated_at.toLocaleDateString() %>
                  <%= turno.updated_at.toLocaleTimeString() %>
              </td>            
              <td>
                <div class="btn-actions">
                  <div>
                    <form action="./editClient" method="GET">
                      <input type="hidden" name="id" value="<%= turno.id %>">
                      <button type="submit" class=" edit-btn"><i class="fa-solid fa-pencil"></i></button>
                    </form>
                  </div>
                  <div>
                    <form action="./delete-client" method="POST" onclick="return confirm('Â¿Estas seguro que deseas eliminar?')">
                      <input type="hidden" name="id" value="<%= turno.id %>">
                      <button type="submit" class=" delete-btn"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  </div> 
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
