  </div>
  </div>
  <div class="form-register">
    <h2>Ingresar Consulta</h2>
    <hr>
    <br>
    <form action="./addQuery" method="POST">
      <div class="container-input">
          <div class="input">
            <label for="numero" class="form-label">Numero</label>
            <input class="controls" type="text" name="numero" id="numero" class="form-control">
          </div>
          <div class="input">
            <label for="fecha" class="form-label">Fecha</label>
            <input class="controls" type="date" name="fecha" id="fecha" class="form-control">
          </div>        
        </div>
      <div class="container-input">
        <div class="input">
          <label for="dueno" class="form-label">Propietario</label>
          <input class="controls" type="text" name="dueno" id="dueno" class="form-control">
        </div>
        <div class="input">
          <label for="patientId" class="form-label">Paciente</label>
          <input class="controls" name="patientId" id="patientId" class="form-control">
        </div>
      </div>
      <br>
      <div class="container-input">
        <div class="input">
          <label for="reason" class="form-label">Anamnesis</label>
          <input class="controls" type="text" name="reason" id="reason" class="form-control">
        </div>
        <div class="input">
          <label for="doctor" class="form-label">Veterinario</label>
          <input class="controls" type="text" name="doctor" id="doctor" class="form-control">
        </div>        
      </div>
      <div class="container-input">
        <div class="input">
          <label for="queryname" class="form-label">Medicamento</label>
          <input class="controls" type="text" name="queryname" id="queryname" class="form-control">
        </div>
        <div class="input">
          <label for="diagnosis" class="form-label">Diagnostico</label>
          <input class="controls" type="text" name="diagnosis" id="diagnosis" class="form-control">
        </div>        
      </div>
        <div class="container-btn">
          <div>
            <button type="submit" class="boton">Agregar Consulta</button>
          </div>
          <div>
            <a href="./query" class="boton">Volver</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
