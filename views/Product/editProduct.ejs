<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/nav.css">
  <script src="https://kit.fontawesome.com/20f8330ac2.js" crossorigin="anonymous"></script>

</head>
<body id="body" onload="open_close_menu()">
  <header>
      <div class="icon__menu">
          <i class="fas fa-bars" id="btn_open"></i>
      </div>
  </header>
  <div class="menu__side" id="menu_side"> 
      
      <div class="name__page"> 
          <i class="fa-solid fa-shield-dog"></i>
          <h4>MyVet</h4>
      </div>
      <div class="options__menu">
              <a href="/index" >
                  <div class="option">
                      <i class="fas fa-home" title="Inicio"></i>
                      <h4>Inicio</h4> 
                  </div>
              </a>
              <a href="./addPaciente" >
                  <div class="option">
                      <i class="fa-solid fa-paw" title="Paciente"></i>
                      <h4>Pacientes</h4>
                  </div>
              </a>
              <a href="./Client">
                  <div class="option">
                      <i class="far fa-id-badge" title="Cliente"></i>
                      <h4>Cliente</h4>
                  </div>
              </a>
              <a href="./query" >
                  <div class="option">
                      <i class="fa-solid fa-file-lines" title="Consulta"></i>
                      <h4>Consulta</h4>
                  </div>
              </a>
              <a href="./ListLogin">
                  <div class="option">
                      <i class="fa-solid fa-stethoscope" title="Usuarios"></i>
                      <h4>Usuarios</h4> 
                  </div>
              </a>
              <a href="./product" class="selected">
                <div class="option">
                    <i class="fa-brands fa-product-hunt" title="Producto"></i>
                    <h4>Productos</h4> 
                </div>
            </a>
            <a href="./Category">
              <div class="option">
                  <i class="fa-solid fa-c" title="Producto"></i>
                  <h4>Categorias</h4> 
              </div>
            </a>
                <a href="./" class="logout">
                    <div class="option">
                        <i class="fa-solid fa-right-from-bracket" title="Salir"></i>
                        <h4>Cerrar Sesi√≥n</h4> 
                    </div>
                </a>
      </div>
  </div>
  <div class="form-register">
    <h2>Editar Producto</h2>
    <hr>
    
    <br>
    <form action="./edit-product" method="POST">
      <input type="hidden" name="id" value="<%= product.id%>">
      <div class="container-input">
        <div class="input">
          <label for="productname" class="form-label">Nombre </label>
          <input class="controls"type="text" name="productname" id="productname" class="form-control" value="<%= product.productname %>">
        </div>
        <div class="input">
          <label for="price" class="form-label">Precio</label>
          <input class="controls" type="number" name="price" id="price" class="form-control" value="<%= product.price %>">
        </div>
      </div>
      <div class="container-input">
        <div class="input">
        <label for="categoriaId" class="form-label">Categoria</label>
        <select class="controls" name="categoriaId" id="categoriaId" class="form-select">
            <option value="" selected ><%= product.categoriaId %></option>
            <% categories.forEach(function(category) { %>
                <option value="<%= category.name %>">
                    <%= category.name %>
                </option>
              <% }) %>
        </select>
        </div>
      </div>
      <div class="container-btn">
          <div>
            <button type="submit" class="boton">Actualizar producto</button>
          </div>       
          <div class="float-end">
            <a href="./index" class="boton" >Volver al inicio</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/script.js"></script>
  <script src="js/menu.js"></script>

</body>

</html>