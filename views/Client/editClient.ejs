<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/nav.css">
  <script src="https://kit.fontawesome.com/20f8330ac2.js" crossorigin="anonymous"></script>

</head>
<body id="body" onload="open_close_menu()">
  <header>
      <div class="icon__menu">
          <i class="fas fa-bars" id="btn_open"></i>
      </div>
  </header>
  <div class="menu__side" id="menu_side"> 
      
      <div class="name__page"> 
          <i class="fa-solid fa-shield-dog"></i>
          <h4>MyVet</h4>
      </div>
     
      </div>
  </div>
  <div class="form-register">
    <h2>Editar Cliente</h2>
    <hr>
    <br>
    <form action="./edit-client" method="POST">
      <input type="hidden" name="idClient" value="<%= client.idClient%>">
      <div class="container-input">
        <div class="input">
          <label for="clientname" class="form-label">Nombre de Cliente</label>
          <input class="controls" type="text" name="clientname" id="clientname" class="form-control" value="<%= client.clientname%>">
        </div>
        <div class="input">
          <label for="dni" class="form-label">DNI </label>
          <input class="controls" type="number" name="dni" id="dni" class="form-control" value="<%= client.dni%>">
        </div>
      </div>
      <div class="container-input">
        <div class="input">
          <label for="email" class="form-label">email</label>
          <input class="controls" type="email" name="email" id="email" class="form-control" value="<%= client.email%>">
        </div>
        <div class="input">
          <label for="phone" class="form-label">Teléfono</label>
          <input class="controls" type="number" name="phone" id="phone" class="form-control" value="<%= client.phone %>">
        </div>
      </div>
      <div class="container-input">
        <div class="input">
          <label for="city" class="form-label">Departamento</label>
          <select class="controls" name="city" id="city" class="form-select" value="<%= client.city %>">
            <option value="" selected><%= client.city %></option>
            <option value="Capital">Capital</option>
            <option value="Gral Alvear">General Alvear</option>
            <option value="Godoy Cruz">Godoy Cruz</option>
            <option value="Guaymallén">Guaymallén</option>
            <option value="Junín">Junín</option>
            <option value="Lavalle">Lavalle</option>
            <option value="Las Heras">Las Heras</option>
            <option value="La Paz">La Paz</option>
            <option value="Luján de cuyo">Luján de cuyo</option>
            <option value="Maipú">Maipú</option>
            <option value="Malargüe">Malargüe</option>
            <option value="Rivadavia">Rivadavia</option>
            <option value="San Carlos">San Carlos</option>
            <option value="Santa Rosa">Santa Rosa</option>
            <option value="Tunuyán">Tunuyán</option>
            <option value="Tupungato">Tupungato</option>
          </select>
        </div> 
      </div>
        <div class="container-btn">
          <div class="">
            <button type="submit" class="boton">Actualizar Cliente</button>
          </div>
        <div class="">
          <div class="float-end">
            <a href="./index" class="boton" >Volver al inicio</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/script.js"></script>
</body>

</html>