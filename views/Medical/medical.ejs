</head>
<body id="body" onload="open_close_menu()">
  <header>
      <div class="icon__menu">
          <i class="fas fa-bars" id="btn_open"></i>
      </div>
      <div class="btn">
        <a href="./turno" class="botonn">Turnos</a>
        <a href="./Query" class="botonn">Consultas</a>
        <a href="./Client" class="botonn">Propietarios</a>
        <a href="./ListLogin" class="botonn">Usuarios</a>
      </div>
      <a href="./" class="logout-sesion">
        <div class="option">
            <i class="fa-solid fa-right-from-bracket" title="Salir"></i>
            <h4>Cerrar</h4> 
        </div>
    </a>
  </header>
  <div class="menu__side" id="menu_side"> 
      
      <div class="name__page"> 
          <i class="fa-solid fa-shield-dog"></i>
          <h4>MyVet</h4>
      </div>
      <div class="options__menu">
              <a href="/index" >
                  <div class="option">
                      <i class="fas fa-home" title="Inicio"></i>
                      <h4>Inicio</h4> 
                  </div>
              </a>
              
            <a href="./listPaciente" >
              <div class="option">
                  <i class="fa-solid fa-paw" title="Paciente"></i>
                  <h4>Pacientes</h4>
              </div>
            </a>
            <a href="./Usuarios" >
              <div class="option">
                  <i class="fa-solid fa-user" title="Recepcionista"></i>
                  <h4>Recepcionista</h4>
              </div>
            </a>
            <a href="./ventas" >
              <div class="option">
                  <i class="fa-solid fa-barcode" title="Ventas"></i>
                  <h4>Ventas</h4>
              </div>
            </a>
            <a href="./medical" class="selected">
              <div class="option">
                  <i class="fa-solid fa-stethoscope" title="Medicos"></i>
                  <h4>Veterinarios</h4>
              </div>
            </a>
            <a href="./medicamentos" >
              <div class="option">
                <i class="fa-solid fa-tablets"></i>
                  <h4>Medicamentos</h4>
              </div>
            </a>
            <a href="./servicio" >
              <div class="option">
                  <!-- <i class="fa-solid fa-paw" title="Recepcionista"></i> -->
                  <i class="fa-solid fa-pen-to-square"></i>
                  <h4>Servicio</h4>
              </div>
            </a>
              <a href="./product">
                <div class="option">
                    <i class="fa-brands fa-product-hunt" title="Producto"></i>
                    <h4>Productos</h4> 
                </div>
            </a>
            <!-- <a href="./Category">
              <div class="option">
                  <i class="fa-solid fa-c" title="Producto"></i>
                  <h4>Categorias</h4> 
              </div>
            </a>
             -->
              
      </div>
  </div>
  </div>
  <div class="center">
    <h4>Veterinarios</h4>
  </div>
  <br>
  <div class="container-table" >
      <table>
<thead>
  <th scope="col">Nombre</th>
  <th scope="col">email</th>
  <th scope="col">telefono</th>
  <th scope="col">Direccion</th>
  <th scope="col">Matricula</th>
  <th scope="col">Fecha de naciemiento</th>
  <th scope="col">Creado</th>
  <th scope="col">Actualizado</th>
  <th scope="col">Opciones</th>
</thead>
<tbody>
  <% medical.forEach(function(medical) { %>
    <tr>
      <td>
        <%= medical.medicalname%>
      </td>
      <td>
        <%= medical.email%>
      </td>   
      <td>
        <%= medical.phone%>
      </td>
      <td>
        <%= medical.address%>
      </td>
      <td>
        <%= medical.specialty%>
      </td>
      <td>
        <%= medical.datebirth%>
      </td>
      <td>
        <%= medical.created_at.toLocaleDateString() %>
          <%= medical.created_at.toLocaleTimeString() %>
      </td>
      <td>
        <%= medical.updated_at.toLocaleDateString() %>
          <%= medical.updated_at.toLocaleTimeString() %>
      </td>            
      <td>
        <div class="btn-actions">
          <div>
            <form action="./editMedical" method="GET">
              <input type="hidden" name="idMedical" value="<%= medical.idMedical%>">
              <button type="submit" class="edit-btn"><i class="fa-solid fa-pencil"></i></button>
            </form>
          </div>
          <div>
            <form action="./delete-medical" method="POST">
              <input type="hidden" name="idMedical" value="<%= medical.idMedical%>">
              <button type="submit" class="delete-btn"><i class="fa-solid fa-trash"></i></button>
            </form>
          </div> 
        </div>
      </td>
    </tr>
    <% }) %>
</tbody>
</table>
</div>
<div class="btn">
  <a href="./addMedical" class="boton">Agregar Medico</a>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
