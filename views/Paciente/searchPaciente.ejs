<%- include("../template/navBar") %>

<body>
  <br>
  <div class="row container centered" width="100vw">
    <div class="text-center">
      <h2>Busca por "<%= searchPaciente %>"</h2>
    </div>
    <br>
    <br>
    <br>
    <table class="table table-hover">
      <thead>
          <th scope="col">Nombre</th>
          <th scope="col">Fecha Nacimiento</th>
          <th scope="col">Peso</th>
          <th scope="col">Altura</th>
          <th scope="col">Especie</th>
          <th scope="col">Creado</th>
          <th scope="col">Actualizado</th>
          <th scope="col">Opciones</th>
      </thead>
      <tbody>
        <% patient.forEach(function(patient) { %>
          <tr>
            <td>
                <%= patient.patientname %>
              </td>
              <td>
                <%= patient.datebirth%>
              </td>   
              <td>
                <%= patient.weigth%>
              </td>
              <td>
                <%= patient.heigth%>
              </td>
              <td>
                <%= patient.specie%>
              </td>
              <td>
                <%= patient.created_at.toLocaleDateString() %>
                  <%= patient.created_at.toLocaleTimeString() %>
              </td>
              <td>
                <%= patient.updated_at.toLocaleDateString() %>
                  <%= patient.updated_at.toLocaleTimeString() %>
              </td>            
              <div class="row">
                <div class="row">
                  <form action="./editPatient" method="GET">
                    <input type="hidden" name="idPatient" value="<%= patient.id %>">
                    <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i>Edi</button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="./delete-patient" method="POST">
                    <input type="hidden" name="idPatient" value="<%= patient.idPatient %>">
                    <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i>Eli</button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/script.js"></script>
</body>

</html>