<%- include("../template/navBar") %>
  </div>
  <div class="form-register">
    <h2>Editar Paciente</h2>
    <hr>
    <br>
    <form action="./edit-patient" method="POST">
      <div class="container-input">
        <div class="input">
          <label for="patientname" class="form-label">Nombre de Paciente</label>
          <input class="controls"type="text" name="patientname" id="patientname" class="form-control" value="<%= patient.patientname%>">
        </div>
        <div class="input">
          <label for="datebirth" class="form-label">Fecha de Naciemiento </label>
          <input class="controls"type="date" name="datebirth" id="datebirth" class="form-control" value="<%= patient.datebirth%>">
        </div>
      </div>
      <div class="container-input">
        <div class="input">
          <label for="weigth" class="form-label">Peso kg</label>
          <input class="controls" type="number" name="weigth" id="weigth" class="form-control" value="<%= patient.weigth%>">
        </div>
      <!-- <div class="input">
        <label for="heigth" class="form-label">Altura Cm</label>
        <input class="controls"type="number" name="heigth" id="heigth" class="form-control" value="<%= patient.heigth%>">
      </div> -->
      </div>
      <div class="container-input">
        <div class="input">
          <label for="specie" class="form-label">Especie</label>
          <select class="controls"  name="specie" id="specie" class="form-select">
              <option value="" selected><%= patient.specie%></option>
              <option value="Felino" >Felino</option>
              <option value="Canino" >Canino</option>
              <option value="Reptil" >Reptil</option>
          </select>
        </div> 
        <div class="input">
          <label for="client" class="form-label">Cliente</label>
          <select class="controls" name="client" id="client">
            <option value="" selected><%= patient.client%></option>
            <% clients.forEach(function(client) { %>
              <option value="<%= client.clientname %>">
                <%= client.clientname %>
              </option>
              <% }) %>
          </select>
        </div>
      </div>
      <div class="container-btn">
        <div class="">
          <button type="submit" class="boton">Actualizar Paciente</button>
        </div>
      <div class="">
        <div class="float-end">
          <a href="./card" class="boton" >Carnet</a>
        </div>
      </div>
    </div>
  </form>
</div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/script.js"></script>
</body>

</html>