<body>
  <div class="form-register">
      <h2>Ingresar Paciente</h2>
      <hr>
      <br>
    <form action="./addPaciente" method="POST" class="container-form">
      <div class="container-input">
        <div class="input">
          <label for="patientname" class="form-label">Nombre de paciente</label>
          <input class="controls" type="text" name="patientname" id="patientname" class="form-control">
        </div>
       
        <div class="input">
          <label for="datebirth" class="form-label">Fecha Nacimiento</label>
          <input class="controls" style="color: black;" type="date" name="datebirth" id="datebirth" class="form-control">
        </div>
      </div>
      <div class="container-input">
        <div class="input">
          <label for="weigth" class="form-label">Peso</label>
          <input class="controls" type="number" min="0" max="100" name="weigth" id="weigth" class="form-control">
        </div>
        <div class="input">
          <label for="heigth" class="form-label">Sexo</label>
          <select class="controls"  name="heigth" id="heigth" class="form-select">
              <option value="" selected>Seleccione Sexo</option>
              <option value="Hembra" >Hembra</option>
              <option value="Macho" >Macho</option>
              <option value="Hembra Esterilizada" >Hembra Esterelizada</option>
              <option value="Macho Castrado" >Macho Castrado</option>
          </select>
       
        </div>
      </div>
      <div class="container-input">
        <div class="input">
          <label for="specie" class="form-label">Especie</label>
          <select class="controls"  name="specie" id="specie" class="form-select">
              <option value="" selected>Seleccione Especie</option>
              <option value="Felino" >Felino</option>
              <option value="Canino" >Canino</option>
              <option value="Reptil" >Reptil</option>
          </select>
        </div> 
        <div class="input">
          <label for="clientname" class="form-label">Cliente</label>
          <select class="controls" name="clientname" id="clientname">
            <option value="" selected>Seleccione cliente</option>
            <% clients.forEach(function(client) { %>
              <option value="<%= client.clientname %>">
                <%= client.clientname %>
              </option>
              <% }) %>
          </select>
        </div>
      </div>
     
     
      <div class="container-btn">
          <div class="">
            <button type="submit" class="boton">Agregar Paciente</button>
          </div>
          <div class="">
            <a href="./listPaciente" class="boton">Volver</a>
          </div>
      </div>
    </form>
  </div>
